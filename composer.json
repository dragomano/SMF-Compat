{
  "name": "bugo/smf-compat",
  "description": "Wrappers to work with global variables and deprecated functions in SMF",
  "type": "library",
  "keywords": [
    "smf",
    "utilities",
    "compatibility"
  ],
  "homepage": "https://github.com/dragomano/smf-compat",
  "license": "MIT",
  "authors": [
    {
      "name": "Bugo",
      "email": "bugo@dragomano.ru"
    }
  ],
  "autoload": {
    "psr-4": {
      "Bugo\\Compat\\": "src/Compat/"
    },
    "files": [
      "src/app.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-intl": "*",
    "ext-mysqli": "*",
    "ext-pgsql": "*"
  },
  "require-dev": {
    "php": "^8.1",
    "pestphp/pest": "^2.36",
    "rector/rector": "^2.0",
    "simplemachines/21": "^2.1",
    "simplemachines/30": "^3.0"
  },
    "repositories": [
    {
      "type": "package",
      "package": {
        "name": "simplemachines/21",
        "version": "2.1.6",
        "dist": {
          "url": "https://download.simplemachines.org/index.php/smf_2-1-6_install.zip",
          "type": "zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "simplemachines/30",
        "version": "3.0",
        "dist": {
          "url": "https://github.com/SimpleMachines/SMF/archive/refs/heads/release-3.0.zip",
          "type": "zip"
        }
      }
    }
  ],
  "scripts": {
    "check": "vendor/bin/rector process --dry-run --clear-cache",
    "tests": "vendor/bin/pest --colors=always",
    "tests-coverage": "vendor/bin/pest --colors=always --coverage --min=90",
    "tests-coverage-clover": "vendor/bin/pest --colors=always --min=90 --coverage-clover coverage.xml",
    "tests-coverage-html": "vendor/bin/pest --colors=always --min=90 --coverage-html coverage"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
